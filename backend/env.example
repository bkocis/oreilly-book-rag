# O'Reilly RAG Quiz Backend Environment Variables

# Application Settings
DEBUG=false
APP_NAME="O'Reilly RAG Quiz API"

# Database Configuration
DATABASE_URL=sqlite:///./quiz_app.db
# For PostgreSQL, use: postgresql://username:password@localhost/dbname

# Vector Database (Qdrant) Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
VECTOR_COLLECTION_NAME=oreilly_documents

# LLM Provider Configuration
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-3.5-turbo

# Document Processing Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Quiz Configuration
MAX_QUESTIONS_PER_QUIZ=20
DEFAULT_DIFFICULTY_LEVEL=medium

# File Storage
UPLOAD_DIR=./data/uploads
PROCESSED_DIR=./data/processed

# CORS Configuration (comma-separated list)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log 